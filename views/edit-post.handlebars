<article>
  <a href="/dashboard">&larr; Back To Dashboard</a>
  <h2>Edit That Post</h2>
  <form class="edit-post-form">
    <div>
      <label for="post-title">Title:</label>
      <input name="post-title" type="text" id="post-title "value="{{post.title}}" />
      <label for="post-content">Content:</label>
      <input name="post-content" type="text" id="post-content" value="{{post.content}}" />
      <span>({{post_content}})</span>
    </div>
    <div>
      {{post.vote_count}}
      {{format_plural "point" post.vote_count}}
      by you on
      {{format_date post.created_at}}
      |
      <a href="/posts/{{post.id}}">{{post.comments.length}}
        {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit">Save Post</button>
    <button type="button" class="delete-post-btn">Delete Post</button>
  </form>
</article>

<form class="form-comment">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">Add Comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/comment.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/edit-post.js"></script>